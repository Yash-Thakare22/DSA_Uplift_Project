#include<bits/stdc++.h>
using namespace std;
int main(){
	for(int i=1;i<=3;i++){
		for(int j=3-1;j>=i;j--)
		cout<<" ";
		for(int k=1;k<=i;k++)
		cout<<"* ";
		cout<<"\n";
	}
	for(int i=1;i<=2;i++){
		for(int j=1;j<=i;j++)
		cout<<" ";
		for(int k=2;k>=i;k--)
		cout<<"* ";
		cout<<"\n";
	}
	return 0;
}
